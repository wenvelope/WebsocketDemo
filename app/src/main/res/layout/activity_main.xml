<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/toEmail"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/switch_Email"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/chatView"
            />
        <Button
            android:id="@+id/switch_Email"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:text="confirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toEmail"
            app:layout_constraintBottom_toTopOf="@+id/chatView"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toEmail"
            app:layout_constraintBottom_toTopOf="@+id/send_Message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <EditText
            android:id="@+id/send_Message"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:maxLines="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/send_Button"
            app:layout_constraintTop_toBottomOf="@+id/chatView"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:id="@+id/send_Button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:text="send"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chatView"
            app:layout_constraintStart_toEndOf="@+id/send_Message"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>